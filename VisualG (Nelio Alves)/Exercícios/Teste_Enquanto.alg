algoritmo "Teste Enquanto"

var
   x, soma : inteiro
inicio

   escreva("Digite o primeiro número: ")
   leia(x)
   
   soma <- 0
   enquanto x <> 0 faca
      soma <- soma + x
      escreva("Digite outro número: ")
      leia(x)
   fimenquanto
   
   escreva("A soma total é: ", soma)
   
   
fimalgoritmo
